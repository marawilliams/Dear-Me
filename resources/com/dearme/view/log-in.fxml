<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane fx:controller="com.dearme.controller.loginController"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           styleClass="pane-background"
           prefHeight="750.0" prefWidth="1250.0">
   <Pane fx:id="contentPane">
      <Label layoutX="394.0" layoutY="250.0" text="Hi! What's your name?" styleClass="label">
         <font>
            <Font size="46.0" />
         </font>
      </Label>
      <TextField layoutX="403.0" layoutY="350.0" prefHeight="40.0" prefWidth="438.0"
                 fx:id="nameField" styleClass="text-field">
         <font>
            <Font size="30.0" />
         </font>
      </TextField>
      <Button layoutX="1150.0" layoutY="25.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0"
              fx:id="submitButton" styleClass="button">
         <graphic>
            <ImageView fitWidth="60" preserveRatio="true" smooth="true">
               <image>
                  <Image url="@../../../images/star.png"/>
               </image>
            </ImageView>
         </graphic>
      </Button>

   </Pane>
</StackPane>
